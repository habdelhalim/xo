{
    "compilerOptions": {
        "watch": true,
        "module": "es2015",
        "target": "es2015",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "./build/"
    },
    "lib": [
        "es2018",
        "dom"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
